<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tugas Data Diri"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <EditText
            android:id="@+id/nik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan NIK "
            android:inputType="number"
            android:maxLength="16"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/nama_lengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp" />

        <EditText
            android:id="@+id/tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_margin="10dp"
            android:layout_below="@id/alamat"
            android:hint="Tanggal Lahir"
            android:inputType="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <EditText
            android:id="@+id/tempat_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Tempat Lahir"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Alamat"
            android:lines="2"
            android:minLines="2"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Usia"
            />

        <EditText
            android:id="@+id/usia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Belum di isi"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <Spinner
            android:id="@+id/jenis_kelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kewarganegaraan"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <RadioGroup
            android:id="@+id/kewarganegaraan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/wni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indonesia"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/wna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lain"
                android:layout_gravity="center"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bidang Kompetensi"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <CheckBox
            android:id="@+id/Development"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Development dan IT"
            android:layout_marginHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/AI_Services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Services"
            android:layout_marginHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/Design_Creative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Design Creative"
            android:layout_marginHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/Writing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Writing"
            android:layout_marginHorizontal="10dp"/>

        <CheckBox
            android:id="@+id/Finance_and_Accounting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finance Dan Accounting"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Mail"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Email"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/reset_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7ABA78"
                android:text="Reset"
                />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7ABA78"
                android:text="Submit"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>